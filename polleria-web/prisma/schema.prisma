generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  SOLD
  CANCELED
}

enum DeliveryType {
  DELIVERY
  PICKUP
}

enum PaymentMethod {
  QR
  CASH
}

model Product {
  id        Int      @id @default(autoincrement())
  nombre    String
  desc      String   @default("")
  precio    Float
  categoria String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orderItems OrderItem[]   
}


model Order {
  id           String        @id @default(cuid())
  createdAt    DateTime      @default(now())
  status       OrderStatus   @default(SOLD)

  customerName String
  customerPhone String

  deliveryType DeliveryType
  deliveryFee  Float         @default(0)
  direccion    String?       // solo si delivery
  referencia   String?

  paymentMethod PaymentMethod

  subtotal     Float
  total        Float

  items        OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId Int
  product   Product @relation(fields: [productId], references: [id])

  qty       Int
  price     Float // precio unitario en el momento de compra
  nameSnap  String // nombre del producto “snapshot”
}

